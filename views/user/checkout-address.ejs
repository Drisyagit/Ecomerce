<h2 style="margin-bottom: 15px;">Select Address</h2>

<!-- Back to Cart Button -->
<a href="/user/cart" style="
    display: inline-block;
    margin-bottom: 20px;
    padding: 8px 16px;
    background-color: #6c757d;
    color: white;
    text-decoration: none;
    border-radius: 4px;
    font-size: 14px;
">‚Üê Back to Cart</a>

<!-- Add Address Button -->
<form action="/user/add-address" method="GET" style="margin-bottom: 20px;">
    <input type="hidden" name="redirectTo" value="checkout">
    <button type="submit" style="
        padding: 8px 16px;
        background-color: #333;
        color: white;
        border: none;
        border-radius: 4px;
        font-size: 14px;
        cursor: pointer;
    ">
        + Add New Address
    </button>
</form>

<!-- Address List and Selection -->
<form action="/user/order-review" method="POST">
    <% addresses.forEach(address => { %>
        <div style="border: 1px solid #ccc; border-radius: 6px; padding: 10px; margin-bottom: 10px;">
            <label style="display: flex; gap: 10px; align-items: flex-start;">
                <input type="radio" name="addressId" value="<%= address._id %>" required />
                <div>
                    <strong><%= address.name %></strong><br>
                    <%= address.houseName %>, <%= address.street %><br>
                    <%= address.city %>, <%= address.district %>, <%= address.state %> - <%= address.pinCode %><br>
                    <strong>Mobile:</strong> <%= address.mobile %><br>
                    <%= address.country %>
                </div>
            </label>
        </div>
    <% }) %>

    <button type="submit" style="
        margin-top: 20px;
        padding: 10px 20px;
        background-color: #007bff;
        color: white;
        border: none;
        border-radius: 4px;
        cursor: pointer;
    ">
        Continue
    </button>
</form>
